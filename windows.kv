WindowManager:
    MainWindow:
    SettingsWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols: 1
        rows: 3
        size_hint_y: 1

        GridLayout:
            cols: 3
            rows: 1
            size_hint_y: 0.05

            Button:
                text: "i"
                on_press:
                    app.root.current = "settings"
                    root.manager.transition.direction = "left"
            Button:
                text: "s"
            Label:
                text: "Ankeralarm"
    
        #mapview
        Image:
            source: 'placeholder.png'
            fit_mode: "fill"
            size_hint_y: 0.6

        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.35

            Button:
                text: "Start"

            GridLayout:
                cols: 3
                rows: 3
            
                Button:
                    text: ""
                    opacity: 0
                    disabled: True

                Button:
                    text: "Up"
                    # Image:
                    #     source: 'placeholder.png'
                    #     fit_mode: "fill"
                    #     center_x: self.parent.center_x
                    #     center_y: self.parent.center_y

                Button:
                    text: ""
                    pacity: 0
                    disabled: True

                Button:
                    text: "L"

                Button:
                    text: "RE"

                Button:
                    text: "R"

                Button:
                    text: ""
                    pacity: 0
                    disabled: True

                Button:
                    text: "D"

                Button:
                    text: ""
                    pacity: 0
                    disabled: True    

<SettingsWindow>:
    name: "settings"
    GridLayout:
        cols: 1
        rows: 3
        size_hint_y: 1

        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.01

            Button:                          
                text:"\u21D0"
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"          

            Label:
                text: "Einstellung"


        GridLayout:
            cols: 4
            rows: 1
            size_hint_y: 0.05


            Label:
                text: 'Radius in Meter'

            TextInput:
                text: '20'
                font_size: 24         
                padding_y: (self.height - self.line_height) / 2  # Vertikales Padding für die Ausrichtung
                halign: 'center'  # Zentrierte Ausrichtung des Texts horizontal
                id: input_field
                input_filter: 'int'
                multiline: False

            Button:
                text: '-'
                on_press: root.decrease()

            Button:
                text: '+'
                on_press: root.increase()


        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.05

            Label:
                text: 'Sound'

            Spinner:
                id: sound_spinner
                text: 'Wähle einen Sound'
                values: ('Sound 1', 'Sound 2', 'Sound 3')  # Fügen Sie hier Ihre Soundoptionen hinzu

<InfoPopup>
    title: 'Informationen'
    size: (400, 400)
    Label:
        text: 'Hello World'
<Info>
    Button:
        text: "button1"
        on_press: root.btn()          
                
