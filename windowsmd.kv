MDScreenManager:
    id: screen_manager
    MDScreen:
        md_bg_color: "#000000"
        name: "main"

        MDHeroFrom:
            id: hero_from
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 3
            size_hint_y: 1
            id: titleGrid

            MDGridLayout:
                cols: 3
                rows: 1
                size_hint_y: 0.08
                id: title_grid

                MDIconButton:
                    id: info_button
                    icon: "information"
                    md_bg_color: "#5780FF"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "info"
                        app.StopUpdateCircle()
            
                MDLabel:           
                    text: "Ankeralarm"
                    halign: "center"
                    valign: "top"
                    md_bg_color: "#5780FF"
                    text_size: root.width, root.height
                    font_size: 32

                MDIconButton:
                    icon: "file-settings"
                    md_bg_color: "#5780FF"
                    on_press: app.StopUpdateCircle()
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "settings"

            MapView:
                id: mapview
                lat: 48.4715279
                lon: 7.9512879
                zoom: 18
                size_hint_y: 0.6
                max_zoom: 16
                pos_hint_y: 0.9
                on_map_source: 
                    app.LoadSettings()
                                 
            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.25

                MDFlatButton:
                    id: launchButton
                    text: "Start"
                    md_bg_color: "#5780FF"
                    size_hint_x: 1
                    size_hint_y: 1
                    halign: "center"
                    on_press: app.ToggleProgram()
                
                MDGridLayout:
                    cols: 3
                    rows: 3

                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: up
                        on_press: app.MoveAnchor('up')
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: left
                        on_press: app.MoveAnchor('left')
                    MDIconButton:
                        md_bg_color: "#FFFFFF"
                        size_hint_x: 1
                        size_hint_y: 1
                        on_press: app.CenterMapButton()
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: right
                        on_press: app.MoveAnchor('right')
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: down
                        on_press: app.MoveAnchor('down')
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0


    MDScreen:
        name: "settings"
        hero_to: hero_to

        MDHeroTo:
            id: hero_to
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 5
            size_hint_y: 1

            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.15

                MDIconButton:
                    icon:"arrow-left"
                    md_bg_color: "#8470ff"
                    size_hint:0.1,0.1
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main"
                        app.DrawCircle()

                MDLabel:
                    text: "Einstellungen"
                    halign: "center"
                    valign: "top"
                    md_bg_color: "#8470ff"
                    font_size: 32
                    size_hint: 1, 1

            MDGridLayout:
                cols:3
                rows:1       
                size_hint_y: 0.4
                padding: [20,20]

                MDTextField:
                    id: radius
                    mode: "fill"
                    hint_text: "in Meter"
                    # helper_text: "Bitte den Radius in Meter eingeben"
                    helper_text_mode: "persistent"
                    halign:"center"
                    text: "200"
                    required: True
                    font_size: 38
                    input_filter: 'int'
                    size_hint: 1, 1
                    on_text: app.WriteToFile()

                MDIconButton:
                    icon: "plus"
                    valign: "center"
                    size_hint: 1, 1
                    on_press: app.IncreaseRadius()
                    on_release: app.WriteToFile()

                MDIconButton:
                    icon: "minus"
                    valign: "center"
                    size_hint: 1, 1
                    on_press: app.DecreaseRadius()
                    on_release: app.WriteToFile()                        

            MDGridLayout:
                rows: 1
                cols: 2
                size_hint_y: 0.3
                padding: [20,20]
                MDLabel:
                    text: 'Alarm Sound auswählen'
                    font_size: 25
                    halign: "left"
                    valign: "middle"
                    text_size: root.width, root.height

                Spinner:
                    id: sound_spinner
                    text: 'Alarm1'
                    values: ('Alarm1', 'Alarm2', 'Alarm3')
                    on_text: app.WriteToFile()

            MDGridLayout:
                rows:1
                cols:1
                size_hint_y: 0.15

            MDGridLayout:
                size_hint_:0.4
                
    MDScreen:
        name: "info"
        hero_to: hero_to_info

        MDHeroTo:
            id: hero_to_info
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 2
            size_hint_y: 1

            MDGridLayout:
                cols: 1
                rows: 2
                size_hint_y: 0.2

                MDLabel:
                    #color: 1,1,1,1
                    text: "Ersteller: Daniel, Florian, Katja"
                    valign: 'center'
                    halign: 'center'

                MDLabel:
                    #color:1,1,1,1
                    text: "App-Version: 1.0"
                    valign: 'center'
                    halign: 'center'

            MDGridLayout:
                cols: 1
                rows: 1
                size_hint_y: 0.5

                Button:
                    text: "Zurück"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main" 
                        app.DrawCircle()
    

                    