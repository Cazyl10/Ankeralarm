MDScreenManager:

    MDScreen:
        md_bg_color: "#000000"
        name: "main"

        MDHeroFrom:
            id: hero_from
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 3
            size_hint_y: 1

            MDGridLayout:
                cols: 3
                rows: 1
                size_hint_y: 0.05

                MDIconButton:
                    icon: "information"
                    md_bg_color: "#5780FF"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "info"
            
                MDLabel:           
                    text: "Ankeralarm"
                    halign: "center"
                    valign: "top"
                    md_bg_color: "#5780FF"
                    #adaptive_height: True
                    text_size: root.width, root.height
                    font_size: 32

                MDIconButton:
                    icon: "file-settings"
                    md_bg_color: "#5780FF"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "settings"

            MapView:
                id: mapview
                lat: 48.4715279
                lon: 7.9512879
                zoom: 16
                size_hint_y: 0.6
                pos_hint_y: 0.9

                MapMarkerPopup:
                    lat: 48.4715279
                    lon: 7.9512879
                    popup_size: dp(230), dp(130)

            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.35

                MDIconButton:
                    icon:"launch"
                    md_bg_color: "#5780FF"
                    size_hint_x: 1
                    size_hint_y: 1
                    halign: "center"
                
                MDGridLayout:
                    cols: 3
                    rows: 3

                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                    MDIconButton:
                        md_bg_color: "#5780FF"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0


    MDScreen:
        name: "settings"
        hero_to: hero_to

        MDHeroTo:
            id: hero_to
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 5

            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.1

                MDIconButton:
                    icon:"arrow-left"
                    md_bg_color: "#8470ff"
                    size_hint:0.1,0.1   
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main" 

                MDLabel:
                    text: "Einstellungen"
                    halign: "center"
                    valign: "top"
                    md_bg_color: "#8470ff"
                    font_size: 32
                    size_hint: 1, 1

            
            MDGridLayout:
                cols:4
                rows:1       
                size_hint_y: 0.1
                MDLabel:
                    text: 'Radius in Meter'
                    halign: "left"
                    valign: "middle"
                    text_size: root.width, root.height
                    font_size: 25

                MDTextField:
                    mode: "fill"
                    hint_text: "Radius in Meter"
                    helper_text: "Bitte den Radius in Meter eingeben"
                    helper_text_mode: "persistent"
                    halign:"center"
                    text: "20"
                    required: True
                    font_size: 38
                    input_filter: 'int'
                    size_hint: 1, 1


                
                MDIconButton:
                    icon: "plus"
                    valign: "center"
                    size_hint: 1, 1



                MDIconButton:
                    icon: "minus"
                    valign: "center"
                    size_hint: 1, 1
                                

            MDGridLayout:
                rows: 1
                cols: 2
                size_hint_y: 0.1
                MDLabel:
                    text: 'Alarm Sound auswählen'
                    font_size: 25
                    halign: "left"
                    valign: "middle"
                    text_size: root.width, root.height

                Spinner:
                    id: sound_spinner
                    text: 'Sound'
                    values: ('Sound 1', 'Sound 2', 'Sound 3')

            MDGridLayout:
                rows:1
                cols:1
                size_hint_y: 0.15

                MDRaisedButton:
                    text: "Speichern"
                    md_bg_color: "green"
                    size_hint_x:1

            MDGridLayout:
                size_hint_:0.5
                
                    

    MDScreen:
        name: "info"
        hero_to: hero_to

        MDHeroTo:
            id: hero_to
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 4
            size_hint_y: 1

            MDGridLayout:
                cols: 1
                rows: 1
                size_hint_y: 0.06

                Button:
                    text: "Zurück"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main" 
    
            MDGridLayout:
                cols: 1
                rows: 2
                size_hint_y: 0.5

                MDLabel:
                    color: 1,1,1,1
                    text: "Ersteller: Daniel, Florian, Katja"

                MDLabel:
                    color:1,1,1,1
                    text: "App-Version: 1.0"

                    