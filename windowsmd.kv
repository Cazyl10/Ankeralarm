MDScreenManager:
    id: screen_manager
    MDScreen:
        md_bg_color: "#000000"
        name: "main"

        MDHeroFrom:
            id: hero_from
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 3
            size_hint_y: 1
            id: titleGrid

            MDGridLayout:
                cols: 3
                rows: 1
                size_hint_y: 0.08
                id: title_grid

                MDIconButton:
                    id: info_button
                    icon: "information"
                    rounded_button: True
                    md_bg_color: "#F0544F"
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "info"
                        app.stop_update_circle()
            
                MDLabel:           
                    text: "Ankeralarm"
                    halign: "center"
                    valign: "top"
                    font_style: "H1"
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    # md_bg_color: "#5780FF"
                    text_size: root.width, root.height
                    font_size: "32sp"

                MDIconButton:
                    icon: "file-settings"
                    md_bg_color: "#F0544F"
                    icon_color: .198, .216, .211, 1
                    # theme_text_color: "Custom"
                    # icon_size: "32sp"
                    on_press: 
                        app.stop_update_circle()
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "settings"

            MapView:
                id: mapview
                zoom: 18
                size_hint_y: 0.6
                pos_hint_y: 0.9
                on_zoom: 
                    app.load_settings()                    
  
            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.25

                MDFlatButton:
                    id: launchButton
                    text: "Start"
                    md_bg_color: "#D81E5B"
                    size_hint_x: 1
                    size_hint_y: 1
                    halign: "center"
                    font_size: "48sp"
                    text_color: 1,1,1,1
                    on_press: 
                        app.toggle_program()
                
                MDGridLayout:
                    cols: 3
                    rows: 3

                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: up
                        icon_size: "32sp"
                        icon: "arrow-up"
                        on_press: app.move_anchor('up')
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: left
                        icon_size: "32sp"
                        icon: "arrow-left"
                        on_press: app.move_anchor('left')
                    MDIconButton:
                        md_bg_color: "#3A3335"
                        size_hint_x: 1
                        size_hint_y: 1
                        icon_size: "32sp"
                        icon: "rotate-right"
                        text_color: 0,0,0,0
                        on_press: app.center_map_button()
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: right
                        icon_size: "32sp"
                        icon: "arrow-right"
                        on_press: app.move_anchor('right')
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        id: down
                        icon_size: "32sp"
                        icon: "arrow-down"
                        on_press: app.move_anchor('down')
                    MDIconButton:
                        md_bg_color: "#F0544F"
                        size_hint_x: 1
                        size_hint_y: 1
                        disabled: True
                        opacity: 0.0

    MDScreen:
        name: "settings"
        hero_to: hero_to

        MDHeroTo:
            id: hero_to
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 5
            size_hint_y: 1

            MDGridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.15

                MDIconButton:
                    icon:"arrow-left"
                    md_bg_color: "#F0544F"
                    size_hint:0.1,0.1
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main"
                        app.back_action()
                MDLabel:
                    text: "Einstellungen"
                    halign: "center"
                    valign: "top"
                    # md_bg_color: "#8470ff"
                    font_size: "32sp"
                    size_hint: 1, 1

            MDGridLayout:
                cols:3
                rows:1       
                size_hint_y: 0.4
                padding: [20,20]

                MDTextField:
                    id: radius
                    mode: "fill"
                    hint_text: "Radius in Meter"
                    # helper_text: "Bitte den Radius in Meter eingeben"
                    helper_text_mode: "persistent"
                    md_bg_color: "#D81E5B"
                    halign:"center"
                    text: "200"
                    text_color: 1,1,1,1
                    required: True
                    font_size: "32sp"
                    input_filter: 'int'
                    size_hint: 1, 1
                    on_text: app.write_to_file()

                MDIconButton:
                    icon: "plus"
                    valign: "center"
                    md_bg_color: "#D81E5B"
                    size_hint: 1, 1
                    on_press: app.button_increase_radius()
                    on_release: app.write_to_file()

                MDIconButton:
                    icon: "minus"
                    valign: "center"
                    md_bg_color: "#D81E5B"
                    size_hint: 1, 1
                    on_press: app.button_decrease_radius()
                    on_release: app.write_to_file()                        

            MDGridLayout:
                rows: 1
                cols: 2
                size_hint_y: 0.3
                padding: [20,20]
                MDLabel:
                    text: 'Alarm Sound auswählen'
                    font_size: 25
                    halign: "left"
                    valign: "middle"
                    text_size: root.width, root.height

                Spinner:
                    id: sound_spinner
                    background_color: '#D81E5B'
                    text_color: 1,1,1,1
                    text: 'Alarm1'
                    values: ('Alarm1', 'Alarm2', 'Alarm3')
                    on_text: app.write_to_file()

            MDGridLayout:
                rows:1
                cols:1
                size_hint_y: 0.15

            MDGridLayout:
                size_hint_:0.4
                
    MDScreen:
        name: "info"
        md_bg_color: "#000000"
        hero_to: hero_to_info

        MDHeroTo:
            id: hero_to_info
            tag: "hero"

            MDIconButton:
                opacity: 0.0
                disabled: True

        MDGridLayout:
            cols: 1
            rows: 2
            size_hint_y: 1

            MDGridLayout:
                cols: 1
                rows: 2
                size_hint_y: 0.7

                MDLabel:
                    text_color: 1,1,1,1
                    font_style: "H4"
                    theme_text_color: "Custom"
                    text: "Ersteller: Daniel, Florian, Katja"
                    valign: 'center'
                    halign: 'center'

                MDLabel:
                    text_color: 1,1,1,1
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text: "App-Version: 1.0"
                    valign: 'center'
                    halign: 'center'

            MDGridLayout:
                cols: 1
                rows: 1
                size_hint_y: 0.3
                padding: [20,20]

                MDFlatButton:
                    text: "Zurück"
                    md_bg_color: "#D81E5B"
                    font_size: "32sp"
                    size_hint_y: 1
                    size_hint_x: 1
                    on_release:
                        root.current_heroes = ["hero"]
                        root.current = "main"
                        app.back_action()
    

                    