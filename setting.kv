
<MainGridLayout>:
MainGridLayout:
    cols: 1
    rows: 3
    size_hint_y: 1

    GridLayout:
        cols: 2
        rows: 1
        size_hint_y: 0.01

        Button:                          
            text:"\u21D0"          

        Label:
            text: "Einstellung"

   
    GridLayout:
        cols: 4
        rows: 1
        size_hint_y: 0.05


        Label:
            text: 'Radius in Meter'

        TextInput:
            text: '20'
            font_size: 24         
            padding_y: (self.height - self.line_height) / 2  # Vertikales Padding für die Ausrichtung
            halign: 'center'  # Zentrierte Ausrichtung des Texts horizontal
            id: input_field
            input_filter: 'int'
            multiline: False

        Button:
            text: '-'
            on_press: root.decrease()

        Button:
            text: '+'
            on_press: root.increase()


    GridLayout:
        cols: 2
        rows: 1
        size_hint_y: 0.05

        Label:
            text: 'Sound'

        Spinner:
            id: sound_spinner
            text: 'Wähle einen Sound'
            values: ('Sound 1', 'Sound 2', 'Sound 3')  # Fügen Sie hier Ihre Soundoptionen hinzu
           
        